@using ProductMagementWeb.Models;
@model ProductList

@{
    ViewData["Title"] = "Create";
}

<div class="row d-flex align-items-center justify-content-center">
    <div class="col-md-4 card p-3">
        <h2 class="text-center text-info">Create new product</h2>
        <form app-action="Cancel" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!--Product Name-->
            <div class="mb-1">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <!--Catagory-->
            <div class="mb-1">
                <label asp-for="Catagory" class="control-label"></label>
                <input asp-for="Catagory" class="form-control" />
                <span asp-validation-for="Catagory" class="text-danger"></span>
            </div>
            <!--Quality-->
            <div class="mb-1">
                <label asp-for="Quality" class="control-label"></label>
                <input asp-for="Quality" class="form-control" />
                <span asp-validation-for="Quality" class="text-danger"></span>
            </div>
            <!--ImportPrice-->
            <div class="mb-1">
                <label asp-for="ImportPrice" class="control-label"></label>
                <input asp-for="ImportPrice" class="form-control" />
                <span asp-validation-for="ImportPrice" class="text-danger"></span>
            </div>
            <!--ExportPrice-->
            <div class="mb-1">
                <label asp-for="ExportPrice" class="control-label"></label>
                <input asp-for="ExportPrice" class="form-control" />
                <span asp-validation-for="ExportPrice" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-8">
                    <input type="submit" value="Create" class="btn btn-primary btn-sm float-end" />
                </div>
                <div class="col-4">
                    <input CausesValidation="False" type="button" value="Cancel" class="btn btn-primary btn-sm float-end" app-action="Cancel" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



